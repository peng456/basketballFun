.service {
    height: 100%;
    width: 100%;
    position: absolute;
    background-color: #F4F6F7;
    font-size: 26rpx;
 }
   .box{
    padding: 0 8%;
    color: #1D1D1D;
   }
   .box .tit{
    text-align: center;
    padding: 5% 0 0 0;
    color: #444444;
    font-weight: bold;
    font-size: 28rpx;
   }
   body img{
    width: 100%;
   }
   .box .tit_s{
    color: #444444;
    margin-top: 8%;
    font-weight: bold;
    font-size: 28rpx;
   }
   .box .cont{
    margin: 5% 0;
    line-height: 1.5;
   }
   .cont{
     display: -webkit-box;
    }
    .cont span{
     display: block;
     -webkit-box-flex: 1;
     width: 10%;
    }
    .cont p{
     -webkit-box-flex: 1;
     text-align: justify;
     width: 90%;
    }