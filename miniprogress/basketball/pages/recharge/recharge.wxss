/*车费余额*/
.balance {
  width: 100%;
  height: 150rpx;
}
.balance image {
  float: left;
  display: block;
  height: 120rpx;
  width: 120rpx;
  margin: 15rpx 40rpx 15rpx 60rpx;
}
.balance .txt {
  display: flex;
  flex-direction: column;
}
.balance .money {
  font-size: 1.5em;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.balance .chinese {
  color: #808080;
  text-indent: 10rpx;
}
/*车费余额*/
.balance-money {
  line-height: 80rpx;
  margin-left: 60rpx;
}
/*充值金额分类*/
.balance-demo {
  padding: 40rpx 0 30rpx 0;
  width: 100%;
  background-color: #fff;
  padding-left: 45rpx;
}
.balance-demo button {
  display: inline-block;
  width: 300rpx;
  height: 120rpx;
  margin: 10rpx 15rpx;
  background-color: transparent;
  border: 1px solid limegreen;
}
.balance-demo button[data-id="5"] {
  padding-top: 30rpx;
}
.balance-demo button.selected {
  background-color: limegreen;
  border: 1px solid limegreen;
  color: #fff;
}
.balance-demo button text {
  display: block;
  line-height: 60rpx;
}
.balance-demo button .botton {
  color: limegreen;
}
.balance-demo button text.selected {
  color: #fff;
}
.other-button-hover {
  background-color: yellow;
}
/*<!--去充值模块-->*/
.goblance {
  width: 100%;
  box-sizing: border-box;
  margin-top: 80rpx;
  padding: 0 30rpx 0 30rpx;
  background-color: #eee;
  text-align: center;
}
.goblance view {
  color: #808080;
  background-color: #eee;
}
.goblance navigator {
  display: inline-block;
  color: #0033FF;
}
.goblance button[disabled="false"] {
  color: #fff;
}
.goblance button {
  color: #fff;
  margin: 20rpx 15rpx;
  background-color: limegreen;
  border: 1px solid limegreen;
}

